<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/txt_primeiro_nome"
        android:layout_width="219dp"
        android:layout_height="0dp"
        android:layout_marginTop="78dp"
        android:layout_marginBottom="34dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Insira o primeiro nome"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/txt_segundo_nome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txt_segundo_nome"
        android:layout_width="217dp"
        android:layout_height="0dp"
        android:layout_marginBottom="40dp"
        android:ems="10"
        android:hint="Insira o segundo nome"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/btn_executar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_primeiro_nome" />

    <TextView
        android:id="@+id/lbl_resultado"
        android:layout_width="95dp"
        android:layout_height="0dp"
        android:layout_marginBottom="374dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_executar" />

    <Button
        android:id="@+id/btn_executar"
        android:layout_width="168dp"
        android:layout_height="0dp"
        android:layout_marginBottom="28dp"
        android:text="Executar"
        app:layout_constraintBottom_toTopOf="@+id/lbl_resultado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_segundo_nome" />
</androidx.constraintlayout.widget.ConstraintLayout>